{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "./scripts/build.bat",
            "linux": {
                "command": [
                    "chmod -R 777 ./scripts/;",
                    "./scripts/build.sh"
                ]
            },
            "windows": {
                "command": "./scripts/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "group": "build",
                "revealProblems": "onProblem"
            },
        },
        {
            "label": "clean build all",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "build all"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./scripts/clean.bat",
            "linux": {
                "command": [
                    "chmod -R 777 ./scripts/;",
                    "./scripts/clean.sh"
                ]
            },
            "windows": {
                "command": "./scripts/clean.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "group": "build",
                "revealProblems": "onProblem"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "kill all"
            ]
        },
        {
            "label": "kill all",
            "type": "shell",
            "command": "./scripts/kill.bat",
            "linux": {
                "command": [
                    "chmod -R 777 ./scripts/;",
                    // "./scripts/kill.sh"
                ]
            },
            "windows": {
                "command": "./scripts/kill.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "focus": false,
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "group": "build",
                "revealProblems": "onProblem"
            },
        },
        {
            "label": "run",
            "type": "shell",
            "linux": {
                "command": "./bin/${input:PickExecutableToRun}"
            },
            "windows": {
                "command": "./bin/${input:PickExecutableToRun}.exe"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
                "group": "client-server",
                "revealProblems": "onProblem"
            },
        },
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "PickExecutableToRun",
            "description": "Select executable:",
            "options": [
                "SERVER",
                "CONSOLE",
                "GUI"
            ],
            "default": "SERVER"
        },
        {
            "type": "promptString",
            "id": "ProvideExecutableToRun",
            "description": "Executable name:",
            "default": "executableName"
        }
    ]
}